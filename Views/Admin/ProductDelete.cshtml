@model test_front_page.Models.Products

@{
    ViewBag.Title = "ProductDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor text-danger">Ürünü Silmek İstediğinizden Emin misiniz ?</h4>
    </div>
</div>

<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3 class="">@Model.Name</h3>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <div class="white-box text-center"> <img src="~/Content/img/Product/@Model.Image" class="img-responsive"> </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <h4 class="box-title m-t-40">Genişlik * Yükseklik : <span>@Model.Width * @Model.Height</span></h4>
                       
                        <h4 class="box-title m-t-40">Stok :<span>@Model.Stock</span></h4>
                     
                        <h4 class="box-title m-t-40">Eklenme Tarihi : <span>@Model.AddedDate</span></h4>
                       
                        <ul class="list-unstyled">
                            @if (Model.Statu)
                            {
                                <li><i class="ti-check bg-success"></i>Ürün  Aktif</li>
                            }
                            else
                            {
                                <li><i class="ti-close bg-danger"></i>Ürün Pasif</li>
                            }




                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <button type="submit" class="btn btn-danger "><i class="fa fa-trash"></i>Ürünü Sil</button>
    <button type="button" onclick="window.location.href='/Admin/ProductList'" class="btn btn-warning"> <i class="fa fa-stop-circle"></i> Vazgeç</button>
</div>
    }
</div>






