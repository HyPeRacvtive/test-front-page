@model test_front_page.Models.About

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Hakkızda Düzenle</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb justify-content-end">
                <li class="breadcrumb-item active">Hakkımızda</li>
            </ol>
            <button type="button" onclick="window.location.href='/Admin/'" class="btn btn-info d-none d-lg-block m-l-15 text-white"><i class="icon-speedometer text-warning"></i> Dashboard</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("About", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        <h5 class="card-title">Hakkımızda</h5>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Hakkımızda Yazısı</label>
                                    @Html.TextAreaFor(x => x.text, new { @class = "form-control", @required = true })
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Resim Ekle</label>
                                    <input type="file" required class="form-control" name="Image" value="" />
                                </div>
                                <div class="form-group">
                                    <br />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <img width="200" height="200" src="~/Content/img/About/@Model.Image"  />
                            </div>

                        </div>
                    </div>


                    <hr>
                    <div class="form-actions m-t-40">
                        <button type="submit" class="btn btn-success"> <i class="ti ti-check"></i> Yayınla</button>
                        <button type="button" onclick="window.location.href='/Admin/Index'" class="btn btn-danger"> <i class="fa fa-stop-circle"></i> Vazgeç</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>







