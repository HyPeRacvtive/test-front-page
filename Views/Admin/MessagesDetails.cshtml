@model test_front_page.Models.Messages


@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Mesaj Detayı</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb justify-content-end">
                <li class="breadcrumb-item"><a href="/Admin/MessagesList">Mesajlar</a></li>
                <li class="breadcrumb-item active">Mesaj Detayı</li>
            </ol>
            <button type="button" onclick="window.location.href='/Admin/MessagesList'" class="btn btn-info d-none d-lg-block m-l-15 text-white"><i class="fa text-warning fa-list"></i> Mesaj Listesi</button>
        </div>
    </div>
</div>






<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor text-danger">@Model.IpAdress Ip Adresinden Gelen Mesaj</h4>
    </div>
</div>

<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3 class="text-capitalize">Adı Soyadı : @Model.Name @Model.SurName</h3>
                <div class="row">
                    <div class="col-lg-9 col-md-9 col-sm-6">
                        <h4 class="box-title m-t-40 text-capitalize">Konu: @Model.Subject</h4>
                        <h2 class="text-capitalize">Mesaj: @Html.Raw(Model.Message)</h2>
                        <h3 class="box-title m-t-40">Tarih: @Model.Time </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <a href="/Admin/MessagesDelete/@Model.Id" class="btn btn-primary btn-rounded">Mesajı Sil</a>
                    @Html.ActionLink("Listeye Dön", "MessagesList")
                </div>}
</div>
