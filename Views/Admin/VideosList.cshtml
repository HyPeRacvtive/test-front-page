@model  IEnumerable<test_front_page.Models.Videos>

@{
    ViewBag.Title = "VideoList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">ViDEOLAR</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb justify-content-end">
                <li class="breadcrumb-item"><a href="/Admin/VideosList">Videolar</a></li>
                <li class="breadcrumb-item active">Video Listesi</li>
            </ol>
            <button type="button" onclick="window.location.href='/Admin/VideosCreate'" class="btn btn-info d-none d-lg-block m-l-15 text-white"><i class="fa fa-video text-warning"></i> Video Ekle</button>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table product-overview" id="myTable">
                        <thead>

                            <tr>
                                <th>Resim</th>
                                <th>Link</th>
                               
                                <th>İşlemler</th>


                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var vid in Model)
                            {
                                <tr>
                                    <td> <img src="~/Content/HomeStyle/assets/img/VideosImages/@vid.Image" alt="Video Resim" width="80"> </td>
                                    <td>@vid.Link</td>
                                 


                                    <td>
                                      
                                        <a href="/Admin/VideosDelete/@vid.Id" class="text-inverse" title="Sil" data-toggle="tooltip"><i class="ti-trash text-danger"></i></a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    Column
</div>

