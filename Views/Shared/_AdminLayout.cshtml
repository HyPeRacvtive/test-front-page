
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="../assets/images/favicon.png">
    <title>AzerSun Admin</title>
    <link href="~/Content/AdminStyle/assets/node_modules/morrisjs/morris.css" rel="stylesheet">
    <link href="~/Content/AdminStyle/assets/node_modules/toast-master/css/jquery.toast.css" rel="stylesheet">
    <link href="~/Content/AdminStyle/dist/css/style.min.css" rel="stylesheet">
    <link href="~/Content/AdminStyledist/css/pages/dashboard1.css" rel="stylesheet">
    <link href="~/Content/AdminStyle/assets/icons/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body class="skin-default-dark fixed-layout">
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">AzerSun</p>
        </div>
    </div>


    <div id="main-wrapper">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">

                <div class="navbar-collapse">

                    <ul class="navbar-nav me-auto">
                        <!-- This is  -->
                        <li class="nav-item"> <a class="nav-link nav-toggler d-block d-md-none waves-effect waves-dark" href="javascript:void(0)"><i class="ti-menu"></i></a> </li>
                        <li class="nav-item"> <a class="nav-link sidebartoggler d-none d-lg-block d-md-block waves-effect waves-dark" href="javascript:void(0)"><i class="icon-menu"></i></a> </li>



                    </ul>

                    <ul class="navbar-nav my-lg-0">

                        <li class="nav-item dropdown">
                            @Html.Action("_MessagesNotification", "Admin")

                        </li>

                        <li class="nav-item right-side-toggle"> <a class="nav-link  waves-effect waves-light" href="javascript:void(0)"><i class="ti-settings"></i></a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="left-sidebar">
            <div class="scroll-sidebar">
                @Html.Action("_AdminSideBar", "Admin")
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">

                        <li class="nav-small-cap">--- İŞLEMLER</li>
                        <li>
                            <a class=" waves-effect waves-dark" href="/Admin/Index"><i class="icon-speedometer"></i>Dashboard </a>

                        </li>
                        <li>
                            <a class="has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false"><i class="ti-layout-grid2"></i><span class="hide-menu">Ürünler</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="/Admin/ProductList">Ürün Listesi</a></li>
                                <li><a href="/Admin/ProductCreate">Ürün Ekle</a></li>

                            </ul>
                        </li>
                        <li>
                            <a class="has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false"><i class="ti-video-clapper"></i><span class="hide-menu">Videolar</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="/Admin/VideosList">Video Listesi</a></li>
                                <li><a href="/Admin/VideosCreate">Video Ekle</a></li>

                            </ul>
                        </li>
                        <li>
                            <a class="has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false"><i class="ti-image"></i><span class="hide-menu">Sliderlar</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="/Admin/SliderList">Slider Listesi</a></li>
                                <li><a href="/Admin/SliderCreate">Slider Ekle</a></li>

                            </ul>
                        </li>
                        <li>
                            <a class="has-arrow waves-effect waves-dark" href="javascript:void(0)" aria-expanded="false"><i class="ti-settings"></i><span class="hide-menu">Ayarlar</span></a>
                            <ul aria-expanded="false" class="collapse">
                                <li><a href="/Admin/GeneralSettings/1">Genel Ayarlar</a></li>
                                <li><a href="/Admin/About/1">Hakkımızda</a></li>

                            </ul>
                        </li>
                        <li>
                            <a class=" waves-effect waves-dark" href="/Admin/MessagesList" aria-expanded="false"><i class="ti-email"></i><span class="hide-menu">Mesajlar @Html.Action("_MessagesCount", "Admin")</span></a>
                        </li>
                        <li>
                            <a class=" waves-effect waves-light" href="/Admin/Social/1"><i class="fa fa-thumbs-up"></i>Sosyal Medya </a>
                        </li>
                        <li>
                            <a class=" waves-effect waves-light" href="/"><i class="fa fa-home"></i>Anasayfa'ya Git </a>
                        </li>
                        <li>
                            <a class="waves-effect waves-dark text-danger" href="/Security/LogOut" aria-expanded="false">
                                <i class="ti-power-off text-danger"></i>
                                <span class="hide-menu">Çıkış</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <div class="page-wrapper">
            <div class="container-fluid">

                @RenderBody()
            </div>
        </div>

        <footer class="footer">
            © Copyright @DateTime.Now.Year All right reserved
            <a href="https://hr.azersun.com/pages/contentPage.aspx?ID=1&Lang=1">AzerSun</a>
        </footer>
    </div>






    <div class="right-sidebar">
        <div class="slimscrollright">
            <div class="rpanel-title"> RENK AYARI <span><i class="ti-close right-side-toggle"></i></span> </div>
            <div class="r-panel-body">
                <ul id="themecolors" class="m-t-20">
                    <li><b>Açık Temalar</b></li>
                    <li><a href="javascript:void(0)" data-skin="skin-default" class="default-theme">1</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-green" class="green-theme">2</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-red" class="red-theme">3</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-blue" class="blue-theme">4</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-purple" class="purple-theme">5</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-megna" class="megna-theme">6</a></li>
                    <li class="d-block m-t-30"><b>Koyu Temalar</b></li>
                    <li><a href="javascript:void(0)" data-skin="skin-default-dark" class="default-dark-theme working">7</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-green-dark" class="green-dark-theme">8</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-red-dark" class="red-dark-theme">9</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-blue-dark" class="blue-dark-theme">10</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-purple-dark" class="purple-dark-theme">11</a></li>
                    <li><a href="javascript:void(0)" data-skin="skin-megna-dark" class="megna-dark-theme ">12</a></li>
                </ul>

            </div>
        </div>
    </div>


    <script src="~/Content/AdminStyle/assets/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/AdminStyle/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Content/AdminStyle/dist/js/waves.js"></script>
    <script src="~/Content/AdminStyle/dist/js/sidebarmenu.js"></script>
    <script src="~/Content/AdminStyle/dist/js/custom.min.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/raphael/raphael-min.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/morrisjs/morris.min.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/toast-master/js/jquery.toast.js"></script>
    <script src="~/Content/AdminStyle/dist/js/dashboard1.js"></script>
    <script src="~/Content/AdminStyle/assets/node_modules/toast-master/js/jquery.toast.js"></script>
</body>
</html>
